<style>
  .post-body {
    border-top: 1px solid #eaeaea;
    padding-top: 15px;
    padding-bottom: 15px;
  }

  .post-title {
    font-weight: bold;
    font-size: 1.5em;
  }

  .post-meta-details {
    border-top: 1px solid #eaeaea;
    margin-top: 15px;
  }
</style>
<div class="post-meta-details">
<h1 align="center">Listing all post</h1>
<% @post.each do |post| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="post-title">
          <%= link_to post.title, post_path(post) %>
        </div>
        <div class="post-body">
          <%= truncate(post.content, length: 100) %>

        </div>
        <div class="post-actions">
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>