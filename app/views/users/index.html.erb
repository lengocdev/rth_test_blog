<style>
  .listing {
    list-style: none;
    padding-left: 0;
  }
</style>

<h1 align="center">All Users</h1>
<div align="center">

  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <ul style="list-style: none">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="post-title"><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.posts.count, "article") if user.posts %></small></li>
          </ul>
        </div>
      </div>
    </ul>
  <% end %>
</div>